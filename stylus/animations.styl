@keyframes mask-horizontal {
    from {
        clip-path: inset(0px 400px 0px 0px);
    }
    to {
        clip-path: inset(0px 0px 0px 0px);
    }
}

@keyframes fade-in {
    from {
        opacity:0
    }
    to {
        opacity:1
    }
}

@keyframes scale-horizontal {
    from {
        transform: scaleX(0)
    }
    to {
        transform: scaleX(1)
    }
}