@import reset
@import fonts

$yellow = #91c840
$off-black = #1b1b1b
$grid-gap = 30px

*
    box-sizing border-box
ul
    list-style none
a
    color: $off-black

body 
    font-family: 'Boogy_Brut_WEBL-Medium'
    background:white
    color:$off-black
    padding:50px
    font-size:2.3em
    text-rendering: geometricPrecision




.parent-container
    max-width: 1480px
    border-top: 10px solid $off-black
    padding-top: 18px
    display: flex
    flex-flow: row wrap
    justify-content: space-between
    gap:0px
    margin:0 auto

.parent-container
    > .header
        flex-basis 100%
        padding-bottom: 150px
    .title
        font-family: 'Boogy_Brut_WEBL-Medium'
        letter-spacing:-1px
        font-size:1.1em

    .subtitle
        font-family: 'Boogy_Brut_WEBL-Light'
        letter-spacing:-1.2px
        font-size:1.0em
        max-width: 380px
        display: block



.item.hello
    border-top:3px solid $off-black
    flex-basis 30%
    margin:0px 0px 0px 0px
    .title
        color: $yellow  
        font-family: 'Boogy_Brut_Poster_WEB-White'
        font-size:2.4em
        padding-bottom:0

    .entry 
        font-size 0.4em
        .content
            padding:10px 0
            font-family: 'Boogy_Brut_WEBL-Regular'
    ul
        font-family: 'Boogy_Brut_WEBL-Regular'
        color: #666
        border-left:4px solid #CCC
        margin-top:30px
        padding-left:30px
    li:first-child
        padding-top:0
    li:last-child
        padding-bottom:0
    li
        padding:8px 0






.content-container
    display:flex
    flex-flow: column wrap
    justify-content: right
    gap:$grid-gap
    flex-basis 66%
    max-height: 1120px

.item.content
    border-top:3px solid $off-black
    width "calc(33% - %s)" % $grid-gap
    margin: 0 1rem 1rem 0
    > .title
        font-family: 'Boogy_Brut_WEBL-Medium'
        font-size:0.6em
        padding:14px 0
    .entry
        font-size:0.4em
        padding:10px 0
        .title
            font-family: 'Boogy_Brut_WEBL-Bold'
        .content
            font-family: 'Boogy_Brut_WEBL-Light'
    .footnote
        font-size:0.3em
        font-style: italic
        font-family: 'Boogy_Brut_WEBL-Light'
        opacity:0.5
        padding:10px 0



@media screen and (max-width: 850px){
    .content-container{
        max-height:2000px
    }
    .item.content{
        width "calc(50% - %s)" % $grid-gap
    }
}

@media screen and (max-width: 620px){
    body{
        padding: 25px
        font-size:3.0em
    }
    .item.hello{
        flex-basis 100%
        margin-bottom 30px
    }
    .content-container{
        flex-basis 100%
        max-height 5000px
        gap 20px
        margin-top 20px
    }
    .item.content{
        width 100%
        > .title {
            font-size:0.8em
            font-family: 'Boogy_Brut_WEBL-Medium'
        }
    }
}